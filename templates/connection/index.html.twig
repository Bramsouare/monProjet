{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}

    <form method="post">

        {% if erreur %}

            <div class="alert alert-danger"> {{ erreur.messageKey | trans(erreur.messageData, 'security') }} </div>

        {% endif %}

        {% if app.user %}

            <div class="container-fluid rows d-flex justify-content-between">

                <div class="card mt-3">

                    <div class="card-body"><strong>

                        Vous êtes connecté en tant que : </strong> {{ app.user.userIdentifier }} 

                    </div>

                </div>
            
                <div class="my-3">

                    <a href="{{ path('app_logout') }}" class="btn btn-secondary">Déconnexion</a>

                </div>

            </div>

        {% endif %}

        <div class="container-fluid col-10">

            <div class="d-flex justify-content-center my-5">

                <h1>Veuillez vous connecter</h1>

            </div>

            <label for="username"> Email </label>

            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

            <label for="password" class="mt-5"> Mots de passe </label>

            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"

                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary mt-5" type="submit">

                Connection     

            </button>

        </div>

    </form>

{% endblock %}
